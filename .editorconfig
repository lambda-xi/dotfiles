# lambda's .editorconfig <3

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = false

[*.{c,js}]
indent_style = tab

[*.c]
indent_size = 8

[*.js]
indent_size = 4

# PEP 8 compliant
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

[Makefile]
indent_style = tab

[{package.json, .travis.yml}]
indent_style = space
indent_size = 2
